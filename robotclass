class Robot:
    def __init__(self,name,color,weight):#define parameters in init constructor
        self.name = name
        self.color = color
        self.weight = weight
    def introduce_self(self):#function of the robot
        print(f"hi i'm {self.name} I'm also {self.color} in color,I weigh {self.weight} pounds")

r1 = Robot("darth","blue",30)#creating an object
r2 = Robot("vader","orange",40)
r1.introduce_self()#print output
r2.introduce_self()

class Person:
    def __init__(self,name,personality,sitting):
        self.name = name
        self.personality = personality
        self.is_sitting = sitting
        
    def sit(self):
        self.is_sitting = True

    def sit(self):
        self.is_sitting = False
p1 = Person("malika","kind",False)
p2 = Person("zuri","tough",True)

p1.robot_owned = r2
p2.robot_owned = r1
